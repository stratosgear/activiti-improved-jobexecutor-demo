<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Tomcat connection pooling -->
    <bean id="dataSource" class="org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close">
        <property name="driverClassName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://localhost:5432/activiti_async" />
        <property name="username" value="postgres" />
        <property name="password" value="postgres" />
        <property name="initialSize" value="25" />
        <property name="maxActive" value="500" />
        <property name="maxIdle" value="50" />
        <property name="minIdle" value="25" />
        <property name="timeBetweenEvictionRunsMillis" value="34000" />
        <property name="minEvictableIdleTimeMillis" value="55000" />
        <property name="validationQuery" value="SELECT 1" />
        <property name="validationInterval" value="34000" />
        <property name="testOnBorrow" value="true" />
        <property name="removeAbandoned" value="true" />
        <property name="removeAbandonedTimeout" value="55" />
    </bean>

    <bean id="processEngineConfiguration" class="org.activiti.engine.impl.cfg.StandaloneProcessEngineConfiguration">

        <property name="dataSource" ref="dataSource" />

        <property name="idGenerator">
            <bean class="org.activiti.engine.impl.persistence.StrongUuidGenerator" />
        </property>

        <!-- job executor configurations -->
        <property name="jobExecutorActivate" value="false" />
        <!-- <property name="jobExecutor" ref="myJobExecutor" /> -->

        <!-- <property name="asyncExecutor" ref="defaultAsyncExecutor" /> -->
        <property name="asyncExecutor" ref="asyncExecutor" />
        <property name="asyncExecutorEnabled" value="true" />
        <property name="asyncExecutorActivate" value="true" />

    </bean>

    <!-- Default Async Executor -->
    <!-- <bean id="defaultAsyncExecutor" class="org.activiti.engine.impl.asyncexecutor.DefaultAsyncJobExecutor"> 
        <property name="queueSize" value="1024" /> <property name="corePoolSize" value="25" /> <property name="maxPoolSize" 
        value="500" /> <property name="keepAliveTime" value="180000" /> </bean> -->

    <!-- <bean id="hazelCastAsyncExecutor" class="org.activiti.HazelCastAsyncExecutor"> </bean> -->

    <bean id="asyncExecutor" class="org.activiti.engine.impl.asyncexecutor.DefaultAsyncJobExecutor">
        <property name="corePoolSize" value="10" />
        <property name="queueSize" value="2000" />
        <property name="maxPoolSize" value="60" />
        <property name="keepAliveTime" value="180000" />
    </bean>


    <!-- Lock Free job executor -->
    <!-- <bean id="myJobExecutor" class="org.activiti.engine.impl.jobexecutor.LockFreeJobExecutor"> <property 
        name="queueSize" value="100" /> <property name="corePoolSize" value="10" /> <property name="maxPoolSize" 
        value="500" /> <property name="keepAliveTime" value="5000" /> <property name="jobFetchBatchSize" value="200" 
        /> <property name="waitTimeInMillis" value="30" /> </bean> -->

</beans>